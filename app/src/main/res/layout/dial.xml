<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dialView">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/favoriteName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text=""
            android:layout_marginTop="5dp">
        </TextView>
        <TextView
            android:id="@+id/distanceValue"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text=""
            android:layout_below="@id/favoriteName">
        </TextView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_margin="12dp">
        <ImageView
            android:id="@+id/dial"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/dial"/>
        <ImageView
            android:id="@+id/pointer2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pointer2"/>
        <ImageView
            android:id="@+id/pointer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pointer" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/favoriteAngleTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Direction Heading">
            </TextView>
            <TextView
                android:id="@+id/favoriteAngleValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="0˚"
                android:layout_below="@id/favoriteName">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/currentAngleTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Current Heading">
            </TextView>
            <TextView
                android:id="@+id/currentAngleValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="0˚"
                android:layout_below="@id/favoriteName">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>