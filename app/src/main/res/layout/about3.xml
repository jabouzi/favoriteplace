<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FFFF00"
    android:weightSum="8">
    <LinearLayout android:background="#FF0000"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="3.2" />
    <LinearLayout android:background="#00FF00"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:gravity="center">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skander Jabouzi 1"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skander Jabouzi 2"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skander Jabouzi 3"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />
    </LinearLayout>
    <LinearLayout android:background="#FF0037FF"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8" />
    <LinearLayout android:background="#ff669900"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8" />
    <LinearLayout android:background="#ffff8800"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8" />
    <LinearLayout android:background="#FF00FFE1"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8" />
    <LinearLayout android:background="#FFFF008C"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_weight="0.8" />
</LinearLayout>