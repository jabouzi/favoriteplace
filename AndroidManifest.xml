<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.skanderjabouzi.favoriteplace"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />

    <permission android:name="com.skanderjabouzi.favoriteplace.SEND_SALATTIME_NOTIFICATIONS"
                android:label="@string/send_salat_notifications_permission_label"
                android:description="@string/send_salat_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />

    <permission android:name="com.skanderjabouzi.favoriteplace.RECEIVE_SALATTIME_NOTIFICATIONS"
                android:label="@string/receive_salat_notifications_permission_label"
                android:description="@string/receive_salat_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />

    <permission android:name="com.skanderjabouzi.favoriteplace.SEND_LOCATION_NOTIFICATIONS"
                android:label="@string/send_location_notifications_permission_label"
                android:description="@string/send_location_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />

    <permission android:name="com.skanderjabouzi.favoriteplace.RECEIVE_LOCATION_NOTIFICATIONS"
                android:label="@string/receive_location_notifications_permission_label"
                android:description="@string/receive_location_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />
                
    <permission android:name="com.skanderjabouzi.favoriteplace.SEND_PHONE_NOTIFICATIONS"
                android:label="@string/send_phone_notifications_permission_label"
                android:description="@string/send_phone_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />

    <permission android:name="com.skanderjabouzi.favoriteplace.RECEIVE_PHONE_NOTIFICATIONS"
                android:label="@string/receive_phone_notifications_permission_label"
                android:description="@string/receive_phone_notifications_permission_description"
                android:permissionGroup="android.permission-group.PERSONAL_INFO"
                android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SET_TIME" />
    <uses-permission android:name="android.permission.SET_TIME_ZONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="com.skanderjabouzi.favoriteplace.SEND_SALATTIME_NOTIFICATIONS" />
    <uses-permission android:name="com.skanderjabouzi.favoriteplace.RECEIVE_SALATTIME_NOTIFICATIONS" />
    <uses-permission android:name="com.skanderjabouzi.favoriteplace.SEND_LOCATION_NOTIFICATIONS" />
    <uses-permission android:name="com.skanderjabouzi.favoriteplace.RECEIVE_LOCATION_NOTIFICATIONS" />


    <application android:icon="@drawable/makka_icon" android:label="@string/app_name">

        <activity android:name="com.skanderjabouzi.favoriteplace.SalatActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor"
                  android:launchMode="singleTop"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name="com.skanderjabouzi.favoriteplace.LocationActivity" android:label="@string/titleLocation" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" 
			android:screenOrientation="portrait" />
    <activity android:name="com.skanderjabouzi.favoriteplace.OptionsActivity" android:label="@string/titleOptions" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" 
			android:screenOrientation="portrait" />
    <activity android:name="com.skanderjabouzi.favoriteplace.SalatQibla" android:label="@string/titleSalatQibla" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" />
    <activity android:name="com.skanderjabouzi.favoriteplace.MediaPlayerVideo" android:screenOrientation="landscape" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
    <activity android:name="com.skanderjabouzi.favoriteplace.Video" android:screenOrientation="landscape" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:configChanges="orientation"/>
    <activity android:name="com.skanderjabouzi.favoriteplace.NextActivity" android:label="@string/titleNext" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" />
    <activity android:name="com.skanderjabouzi.favoriteplace.HijriActivity" android:label="@string/titleHijri" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" />
    <activity android:name="com.skanderjabouzi.favoriteplace.SettingsActivity" android:label="@string/titleSettings" 
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" />

    <service android:name="com.skanderjabouzi.favoriteplace.AdhanService" android:enabled="true"/>
    <service android:name="com.skanderjabouzi.favoriteplace.LocationService" android:enabled="true"/>

    <receiver android:name="com.skanderjabouzi.favoriteplace.SalatBootReceiver">
      <intent-filter>
			<action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>

    <receiver android:name="SalatPhoneReceiver">
        <intent-filter>
			<action android:name="android.intent.action.PHONE_STATE" />
        </intent-filter>
    </receiver>
    
    <receiver android:name="com.skanderjabouzi.favoriteplace.SalatTimeReciever">
        <intent-filter>
			<action android:name="android.intent.action.TIME_SET" />
        </intent-filter>
    </receiver>
    
    <receiver android:name="com.skanderjabouzi.favoriteplace.NetworkReceiver">
		<intent-filter>
			<action android:name="android.intent.action.TIMEZONE_CHANGED" />
			<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
		</intent-filter>
    </receiver>

    </application>
</manifest>
